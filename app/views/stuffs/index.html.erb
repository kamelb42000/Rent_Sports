<section class="header-section">
  <div class="container">
    <header class="navbar">
      <a><strong>Rent-Sports</strong></a>
        <nav>
          <ul>
            <li><%= link_to "Accueil", root_path%></li>
            <li><%= link_to "Produits", stuffs_path %></li>
            <li><%= link_to"Deconexion", destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
            <li><%= link_to "Compte",  new_user_session_path %></a></li>
          </ul>
          <div class="barre">
            <input class="recherche" type="text-input"placeholder="Mon équipement"><input class="btn" type="submit" value="Envoyer" >
          </div>
        </nav>
    </header>
  </div>
  <h3 class="mb-0">Produits</h3>
  <a> class="bouton" <%= link_to "louez votre équipement", new_stuff_path, class: "btn-ghost" %></a>
  <div class="d-flex">
    <div class="row w-50">
        <% @stuffs.each do |stuff| %>
          <div class="col-6 mx-auto">
            <%= link_to stuff_path(stuff) do %>
              <%= image_tag '' %>
              <div class="card-category">
                <%= stuff.name %>

                <div class="icone">
                  <i class="fa-solid fa-star"></i>
                  <i class="fa-solid fa-star"></i>
                  <i class="fa-solid fa-star"></i>
                </div>
                <p>Prix: <%= stuff.price %>€ la journée</p>
              </div>
            <% end %>
          </div>
        <% end %>
    </div>
    <div class="w-50">
  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    <div id="map">
    </div>
    </div>

  </div>
  </div>

  <div style="height: 100%;">
  <div class="show-rows">
      <div class="show-row" *ngFor="let show of shows; let i=index">
      <div>
  <div>
  <div #spacer></div>
  <div stickyThing [spacer]="spacer">
      <div #map style="width: 65%; position: absolute; left: 500px;" [ngStyle]="{'height': getViewPortHeight()}"></div>
  </div>
</div>


</div>

</section>
